<!doctype html>
<html lang="en">
<head>
	<meta charset="utf8">
	<title><%= @title + ' | Activity logging' %></title>
	<link href="/reset.css" rel="stylesheet">
	<link href="/style.css" rel="stylesheet">
</head>
<body bgcolor="Silver">
	<header>
		<hgroup>
			<h1><a href="/">Activities</a></h1>
			<h2>'All activities</h2>
		</hgroup>
	</header>
	<div id="main" style="position: fixed; middle: 10px; top: 10px;">
		<% if flash[:notice] %>
			<p class="notice"><%= flash[:notice] %>
		<% end %>

		<% if flash[:error] %>
			<p class="error"><%= flash[:error] %>
		<% end %>
	</div>
	<div>
		<%= yield %>
	</div>
	<footer>
		<p><small>Activity logging app</small></p>
	</footer>

</body>
</html>
